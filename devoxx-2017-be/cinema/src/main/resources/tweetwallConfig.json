{
    "twitter": {
        "extendedMode": true
    },
    "tweetwall": {
        "query": "#devoxx",
        "title": "The JavaFX Cinema Tweetwall for Devoxx BE 2017!",
        "stylesheetResource": "tweetwall.css"
    },
    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwall.devoxx.cfp.stepengine.steps.UpdateScheduleResults",
                "config": {
                    "initialOffset": 5,
                    "updateInteval": 15
                }
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17ShowSchedule"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17UpdateVotingResults"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutScheduleToday"
            },        
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17ShowTopRatedToday"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutTopRatedDay"
            },        
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutScheduleWeek"
            },        
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17ShowTopRatedWeek"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx17be.steps.Devoxx17FlipOutTopRatedWeek"
            }
        ]
    }
}
