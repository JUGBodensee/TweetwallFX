{
    "twitter": {
        "extendedMode": true
    },
    "tweetwall": {
        "query": "#devoxx",
        "title" : "The JavaFX Cinema Tweetwall for Devoxx PL 2018!",
        "stylesheetResource": "tweetwall.css"
    },
    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx.cfp.stepengine.steps.UpdateScheduleResults",
                "config": {
                    "initialOffset": 5,
                    "updateInteval": 15
                }
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxShowSchedule"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipOutTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx.cfp.stepengine.steps.UpdateVotingResults"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipOutScheduleToday"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxShowTopRatedToday"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipOutTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipOutScheduleWeek"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxShowTopRatedWeek"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipOutTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.steps.DevoxxFlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedWeek"
                }
            }
        ],
        "dataProviderSettings": [
            {
                "dataProviderClassName": "org.tweetwallfx.tweet.stepengine.dataprovider.TweetStreamDataProvider",
                "config": {
                    "blockedTwitterUserScreenNames": [
                        "1120blackfriday"
                    ],
                    "historySize": 25,
                    "maxTweets": 4,
                    "minFollowersCount": 50
                }
            }
        ]
    }
}
